<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">New Post:</h2>
                <form class="form newpost-form">
                    <div class="form-group">
                        <label for="job-title">
                        <input class="form-control" type="text" placeholder="Title of Post" aria-label="Title of Post" id="post-title-input" />
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="notes">
                        <textarea class="form-control" type="text" placeholder="Post" aria-label="Post" id="post-input" rows="3"></textarea>
                        </label>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-dark" id="post-submit" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</br>

<div class='row'>
{{#if posts.length}}
<div class="col-md-6">
    {{!-- header for current posts here --}}
  {{#each posts as |post|}}
  <div class="row mb-2">
    <div class='col-mb-8'>
        <div class='card'>
            <div class='card-header'>
                <a href='/post/{{post.id}}'>{{title}}</a>
                <div style="text-align: right">Posted by {{user.name}} on {{format_date date_created}}</div>
            </div>
            <div class='card-body'>
                <div class='card-text'>{{description}}</div>
                <button class="btn btn-delete btn-danger" type="submit" post-id="{{post.id}}">DELETE</button>
            </div>
        </div>  
    </div>
  </div>
</div>
</div>
{{/each}}
</div>
{{/if}}
<script src="./js/profile.js"></script>