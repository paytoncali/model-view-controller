{{#each posts as |post|}}
<div class='row'>
    <div class='col justify-content-center'>
        <div class='card'>
            <div class='card-header'>
                <a href='/post/{{post.id}}'>{{title}}</a>
                <div style="text-align: right">Posted by {{user.name}} on {{format_date date_created}}</div>
            </div>
            <div class='card-body'>
                <div class='card-text'>{{description}}</div>
            </div>
        </div>
    </div>
</div>
</br>
{{/each}}
