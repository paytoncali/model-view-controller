<div class='row'>
    <div class='col justify-content-center'>
        <div class='card'>
            <div class='card-header'>
                <a href='#'>{{title}}</a>
                <div style="text-align: right">Posted by {{name}} on {{format_date date_created}}</div>
            </div>
            <div class='card-body'>
                <div class='card-text'>{{description}}</div>
            </div>
        </div>
    </div>
</div>
</br>

{{!-- {{#each comments as |comment|}} --}}
<div class='row'>
    <div class='col justify-content-center'>
        <div class='card'>
            <div class='card-header'> Add Comment</div>
            <div class='card-body'>
                <textarea class="form-control" id="{{id}}-Textarea" rows="3"></textarea>
                <button class='btn btn-dark justify-content-center'>Submit</button>
            </div>
        </div>
    </div>
</div>
{{!-- {{/each}} --}}