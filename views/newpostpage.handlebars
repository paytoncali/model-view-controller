<div class="row g-6">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">New Post:</h2>
                <form class="form newpost-form">
                    <div class="form-group">
                        <label for="job-title">
                        <input class="form-control" type="text" placeholder="Title of Post" aria-label="Title of Post" id="job-title-input" />
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="notes">
                        <textarea class="form-control" type="text" placeholder="Post" aria-label="Post" id="post-input" rows="3"></textarea>
                        </label>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-dark btn-form-submit" type="submit">Submit</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="./js/newJob.js"></script>